    　　<script>
            var a=9
            var b=3
            var c=[["!","!","!","!","!","!","!"],["!","ん","!","!","!","!","!"],["!","わ","!","!","!","を","!"],["!","ら","り","る","れ","ろ","!"],["!","や","!","ゆ","!","よ","!"],["!","ま","み","む","め","も","!"],["!","は","ひ","ふ","へ","ほ","!"],["!","な","に","ぬ","ね","の","!"],["!","た","ち","つ","て","と","!"],["!","さ","し","す","せ","そ","!"],["!","か","き","く","け","こ","!"],["!","あ","い","う","え","お","!"],["!","!","!","!","!","!","!"]];
            function down(){
                 if (c[a][b+1]=="!"){
                    document.getElementById("black_txt").textContent ="!";
                 }else{
                     b=b+1;
                     document.getElementById("black_txt").textContent ="?";}
            }
            function up(){
                 if (c[a][b-1]=="!"){
                    document.getElementById("black_txt").textContent ="!";;
                 }else{
                     b=b-1;
                     document.getElementById("black_txt").textContent ="?";}
            }
            function left(){
                 if (c[a-1][b]=="!"){
                    document.getElementById("black_txt").textContent ="!";}
                 else{
                     a=a-1;
                     document.getElementById("black_txt").textContent ="?";}
            }
            function right(){
              if (c[a+1][b]=="!"){
                 document.getElementById("black_txt").textContent ="!";}
              else{
                  a=a+1;
                  document.getElementById("black_txt").textContent ="?";}
            }
            function q(){
　               answer = window.prompt("Where are you?","")
　　          if(answer == c[a][b]){
　　　            location.href = "https://nekofukurou752158039.wordpress.com/2020/06/06/where-are-youclear/";
　　             }
              else if(answer != "" && answer != null){
　　　              window.alert("?");
　　          }
//キャンセルを選択した場合は警告ダイアログを表示
　　          else{
　　　            window.alert("cancel");
　　                 }
　　              }
        </script>
